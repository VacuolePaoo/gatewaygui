{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gateway",
  "version": "0.0.1",
  "identifier": "com.gateway.app",
  "build": {
    "beforeDevCommand": "pnpm vite:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm vite:build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Gateway GUI",
        "label": "main",
        "width": 1000,
        "height": 800,
        "center": true,
        "focus": true,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon_32x32.ico",
      "icons/icon_128x128.ico",
      "icons/icon_256x256.ico",
      "icons/icon_16x16.ico",
      "icons/icon_48x48.ico",
      "icons/icon_64x64.ico",
      "icons/icon_10x10.ico",
      "icons/apple.icns"
    ]
  }
}